<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/teacher_custom_dialog_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/selector"
    >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/selector_relative_alert_dialog"
            android:layout_marginBottom="@dimen/standard_margin">

            <TextView
                android:id="@+id/Warning_Title_Txt_View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@android:color/white"
                android:textSize="35dp"
                android:text="خطا !"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/Warning_Content_Txt_View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_font_size"
            android:layout_below="@+id/Warning_Title_Txt_View"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/standard_margin"
            android:layout_marginBottom="@dimen/standard_margin"
            android:layout_gravity="right"
            android:textColor="@android:color/black"
            android:text="@string/teacher_warning_txt"/>
        <TextView
            android:id="@+id/Warning_Main_Content_Txt_View"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/normal_font_size"
            android:layout_marginRight="@dimen/standard_margin"
            android:layout_marginLeft="@dimen/standard_margin"
            android:layout_below="@+id/Warning_Content_Txt_View"
            android:layout_alignParentRight="true"
            android:textColor="@android:color/black"
            android:text="@string/teacher_warning_main_txt"
            android:layout_gravity="right"
            android:layout_marginBottom="@dimen/standard_margin_x2"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Warning_Main_Content_Txt_View"
            >
                <Button
                    android:id="@+id/Warning_Login_Txt_View"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ورود"
                    android:textSize="@dimen/normal_font_size"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:background="@drawable/teacher_warning_login_btn"
                    android:textColor="@android:color/white"
                    android:layout_marginRight="@dimen/standard_margin"
                    android:layout_marginBottom="@dimen/standard_margin"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_alignTop="@+id/Warning_Register_Txt_View"
                    />

                <Button
                    android:id="@+id/Warning_Register_Txt_View"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/normal_font_size"
                    android:padding="8dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:background="@drawable/teacher_warning_login_btn"
                    android:text="عضویت"
                    android:layout_marginLeft="@dimen/standard_margin"
                    android:layout_marginBottom="@dimen/standard_margin"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" />



        </RelativeLayout>


    </LinearLayout>



