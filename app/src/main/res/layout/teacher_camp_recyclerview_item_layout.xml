<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
   >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/teacher_camp_cardview"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/camp_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                tools:src="@drawable/index"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/standard_margin"
                android:layout_marginTop="@dimen/standard_margin"
                android:layout_marginBottom="@dimen/standard_margin" />
            <TextView
                android:id="@+id/CampName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/camp_logo"
                android:layout_alignTop="@+id/camp_logo"
                android:layout_marginTop="@dimen/standard_margin_x2"
                android:layout_marginRight="@dimen/standard_margin_x2"
                android:layout_marginLeft="@dimen/standard_margin_x2"
                android:layout_marginBottom="@dimen/standard_margin"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_font_size"
                tools:text="دوره سیسکو"/>
            <TextView
                android:id="@+id/Camp_Duration_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/CampName"
                android:layout_toLeftOf="@+id/camp_logo"
                android:layout_marginRight="@dimen/standard_margin_x2"
                android:textSize="@dimen/normal_font_size"
                android:textColor="@android:color/black"
                android:layout_marginBottom="@dimen/standard_margin"
                android:text="مدت دوره : "/>
            <TextView
                android:id="@+id/Camp_Duration_Value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_font_size"
                android:layout_below="@+id/CampName"
                android:layout_toLeftOf="@+id/Camp_Duration_Title"
                android:layout_marginRight="@dimen/standard_margin"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_marginBottom="@dimen/standard_margin"
                tools:text="30"
                />
            <TextView
                android:id="@+id/Camp_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_font_size"
                android:layout_below="@+id/CampName"
                android:layout_toLeftOf="@+id/Camp_Duration_Value"
                android:layout_marginBottom="@dimen/standard_margin"
                android:text="روز"
                />
            <TextView
                android:id="@+id/Camp_fee_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_font_size"
                android:layout_below="@+id/Camp_Duration_Title"
                android:layout_marginRight="@dimen/standard_margin_x2"
                android:layout_marginBottom="@dimen/standard_margin"
                android:layout_toLeftOf="@+id/camp_logo"
                android:text="میزان شهریه : "
                />
            <TextView
                android:id="@+id/Camp_Fee_Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Camp_Duration_Title"
                android:layout_toLeftOf="@+id/Camp_fee_Title"
                android:layout_marginLeft="@dimen/standard_margin"
                android:layout_marginRight="@dimen/standard_margin"
                android:layout_marginBottom="@dimen/standard_margin"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_font_size"
                tools:text="3000"
                />
            <TextView
                android:id="@+id/Camp_Currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Camp_Duration_Title"
                android:layout_toLeftOf="@+id/Camp_Fee_Text"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_font_size"
                android:text="ریال"
                />
            <TextView
                android:id="@+id/ClassCapacityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/camp_logo"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_font_size"
                android:layout_below="@+id/Camp_fee_Title"
                android:layout_marginRight="@dimen/standard_margin_x2"
                android:layout_marginBottom="@dimen/standard_margin"
                android:text="ظرفیت دوره :"
                />
            <TextView
                android:id="@+id/ClassCapacityValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Camp_Fee_Text"
                android:layout_toLeftOf="@+id/ClassCapacityText"
                android:layout_marginRight="@dimen/standard_margin_x2"
                android:textColor="@android:color/black"
                android:text="30"/>
            <TextView
                android:id="@+id/ClassCapacitypoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Camp_Fee_Text"
                android:layout_toLeftOf="@id/ClassCapacityValue"
                android:layout_marginRight="@dimen/standard_margin"
                android:textSize="@dimen/normal_font_size"
                android:textColor="@android:color/black"
                android:text="نفر"/>
        </RelativeLayout>
</android.support.v7.widget.CardView>


</RelativeLayout>