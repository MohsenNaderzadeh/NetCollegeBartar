<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/standard_margin_x2"
    android:layout_marginBottom="50dp">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">


           <TextView
               android:id="@+id/edit_profile_user_first_name_txt"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_marginBottom="@dimen/standard_margin"
               android:textSize="@dimen/large_font_size"
               android:textColor="@android:color/black"
               android:text="نام : "/>
           <EditText
               android:id="@+id/edit_profile_user_first_name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginRight="@dimen/standard_margin_x2"
               android:layout_marginLeft="@dimen/standard_margin_x2"
               android:layout_marginBottom="@dimen/standard_margin"
               android:maxLines="1"
               android:maxLength="20"
               android:background="@drawable/selectoredittextusername"
               android:layout_below="@id/edit_profile_user_first_name_txt"
               />
           <TextView
               android:id="@+id/edit_profile_user_last_name_txt"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_marginBottom="@dimen/standard_margin"
               android:textSize="@dimen/large_font_size"
               android:textColor="@android:color/black"
               android:layout_below="@+id/edit_profile_user_first_name"
               android:text="نام خانوادگی : "/>
           <EditText
               android:id="@+id/edit_profile_user_last_name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginRight="@dimen/standard_margin_x2"
               android:layout_marginLeft="@dimen/standard_margin_x2"
               android:layout_marginBottom="@dimen/standard_margin"
               android:background="@drawable/selectoredittextusername"
               android:maxLines="1"
               android:maxLength="30"
               android:layout_below="@id/edit_profile_user_last_name_txt"
               />
           <TextView
               android:id="@+id/edit_profile_user_profile_url_txt"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_marginBottom="@dimen/standard_margin"
               android:textSize="@dimen/large_font_size"
               android:textColor="@android:color/black"
               android:layout_below="@+id/edit_profile_user_last_name"
               android:text="لینک تصویر پروفایل :"/>
           <EditText
               android:id="@+id/edit_profile_user_profile_url"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginRight="@dimen/standard_margin_x2"
               android:layout_marginLeft="@dimen/standard_margin_x2"
               android:layout_marginBottom="@dimen/standard_margin"
               android:background="@drawable/selectoredittextusername"
               android:layout_below="@id/edit_profile_user_profile_url_txt"
               />
           <TextView
               android:id="@+id/edit_profile_user_email_url_txt"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_marginBottom="@dimen/standard_margin"
               android:textSize="@dimen/large_font_size"
               android:textColor="@android:color/black"
               android:layout_below="@+id/edit_profile_user_profile_url"
               android:text="نشانی ایمیل : "/>
           <EditText
               android:id="@+id/edit_profile_user_email_url"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginRight="@dimen/standard_margin_x2"
               android:layout_marginLeft="@dimen/standard_margin_x2"
               android:layout_marginBottom="@dimen/standard_margin"
               android:background="@drawable/selectoredittextusername"
               android:layout_below="@id/edit_profile_user_email_url_txt"
               />
           <TextView
               android:id="@+id/edit_profile_user_phone_number_txt"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_marginBottom="@dimen/standard_margin"
               android:textSize="@dimen/large_font_size"
               android:textColor="@android:color/black"
               android:layout_below="@+id/edit_profile_user_email_url"
               android:text="شماره تلفن همراه :"/>
           <EditText
               android:id="@+id/edit_profile_user_phone_number"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginRight="@dimen/standard_margin_x2"
               android:layout_marginLeft="@dimen/standard_margin_x2"
               android:layout_marginBottom="@dimen/standard_margin"
               android:maxLines="1"
               android:maxLength="11"
               android:background="@drawable/selectoredittextusername"
               android:layout_below="@id/edit_profile_user_phone_number_txt"
               />
           <TextView
               android:id="@+id/edit_profile_user_user_name_txt"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_marginBottom="@dimen/standard_margin"
               android:textSize="@dimen/large_font_size"
               android:textColor="@android:color/black"
               android:layout_below="@+id/edit_profile_user_phone_number"
               android:text="نام کاربری : "/>
           <EditText
               android:id="@+id/edit_profile_user_user_name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginRight="@dimen/standard_margin_x2"
               android:layout_marginLeft="@dimen/standard_margin_x2"
               android:layout_marginBottom="@dimen/standard_margin_x2"
               android:maxLength="15"
               android:maxLines="1"
               android:background="@drawable/selectoredittextusername"
               android:layout_below="@id/edit_profile_user_user_name_txt"
               />
           <TextView
               android:id="@+id/edit_profile_user_password_txt"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_alignParentRight="true"
               android:layout_marginBottom="@dimen/standard_margin_x2"
               android:textSize="@dimen/large_font_size"
               android:textColor="@android:color/black"
               android:layout_below="@+id/edit_profile_user_user_name"
               android:text="رمز عبور : "/>
           <EditText
               android:id="@+id/edit_profile_password_name"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginRight="@dimen/standard_margin_x2"
               android:layout_marginLeft="@dimen/standard_margin_x2"
               android:layout_marginBottom="16dp"
               android:maxLines="1"
               android:maxLength="35"
               android:background="@drawable/selectoredittextusername"
               android:layout_below="@id/edit_profile_user_password_txt"
               />

           <Button
               android:id="@+id/Submit_new_information_for_user_profile"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="4dp"
               android:layout_below="@+id/edit_profile_password_name"
               android:textColor="@android:color/white"
               android:background="@drawable/selector_departemants"
               android:text="ثبت اطلاعات"/>

       </RelativeLayout>
   </ScrollView>

</RelativeLayout>