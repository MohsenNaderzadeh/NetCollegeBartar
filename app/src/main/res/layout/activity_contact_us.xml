<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context="bluedragon.app.netcollegebartar.Views.Activities.ContactUsActivity">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/Contact_with_UsAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/Contact_with_Usttolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="8dp"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/Contact_with_us_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/standard_margin"
                    android:textColor="@color/splash_background_1"
                    android:textSize="@dimen/toolbar_title_Font_size"
                    android:text="درباره ما"/>

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/About_UsCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        android:layout_below="@+id/Contact_with_UsAppBar"
       >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/standard_margin_x2">


            <TextView
                android:id="@+id/PhoneNumbers_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_font_size"
                android:text="شماره های تماس : "/>
            <TextView
                android:id="@+id/firstphonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/PhoneNumbers_Title"
                android:text=" 02632207952"/>
            <TextView
                android:id="@+id/secondphonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/firstphonenumber"
                android:layout_toLeftOf="@+id/PhoneNumbers_Title"
                android:text="09355456565"/>
            <TextView
                android:id="@+id/thirdphonenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/secondphonenumber"
                android:layout_marginBottom="@dimen/standard_margin_x2"
                android:layout_toLeftOf="@+id/PhoneNumbers_Title"
                android:text="09355456565"/>
            <TextView
                android:id="@+id/mail_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/thirdphonenumber"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_font_size"
                android:layout_marginBottom="@dimen/standard_margin_x2"
                android:text="نشانی پست الکترونیکی : "
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/mail_address"
                android:layout_marginRight="@dimen/standard_margin_x2"
                android:textSize="@dimen/normal_font_size"
                android:layout_below="@id/thirdphonenumber"
                android:text=" info@netcollege-bartar.ir"/>
            <TextView
                android:id="@+id/address_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/mail_address"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/standard_margin_x2"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_font_size"
                android:text="نشانی : "/>
            <TextView
                android:id="@+id/AddressValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mail_address"
                android:layout_toLeftOf="@id/address_title"
                android:textSize="@dimen/normal_font_size"
                android:text="کرج،بلوار بلال،نرسیده به چهارراه هفت تیر،جنب بانک توسعه،ساختمان میلاد،طبقه دوم"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
