<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bluedragon.app.netcollegebartar.Views.Activities.RegisterFormActivity">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/ClassRegister_Appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/NetCollege_Tool_Bar_Class_Register"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="8dp"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/Register_Class_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/standard_margin"
                    android:textColor="@color/splash_background_1"
                    android:textSize="@dimen/toolbar_title_Font_size"
                    tools:text="عنوان کلاس" />

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ClassRegister_Appbar"
        android:padding="@dimen/standard_margin_x2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/register_user_first_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/standard_margin_x2"
                android:textSize="@dimen/large_font_size"

                android:textColor="@android:color/black"
                android:text="نام : "/>
            <EditText
                android:id="@+id/register_user_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/standard_margin_x2"
                android:layout_marginLeft="@dimen/standard_margin_x2"
                android:layout_marginBottom="@dimen/standard_margin_x2"
                android:maxLines="1"
                android:maxLength="20"
                android:enabled="false"
                android:background="@drawable/selectoredittextusername"
                android:layout_below="@id/register_user_first_name_txt"
                />
            <TextView
                android:id="@+id/register_user_last_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"

                android:layout_marginBottom="@dimen/standard_margin_x2"
                android:textSize="@dimen/large_font_size"
                android:textColor="@android:color/black"
                android:layout_below="@+id/register_user_first_name"
                android:text="نام خانوادگی : "/>
            <EditText
                android:id="@+id/Register_user_last_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/standard_margin_x2"
                android:layout_marginLeft="@dimen/standard_margin_x2"
                android:layout_marginBottom="@dimen/standard_margin_x2"
                android:enabled="false"
                android:background="@drawable/selectoredittextusername"
                android:maxLines="1"
                android:maxLength="30"
                android:layout_below="@id/register_user_last_name_txt"
                />
            <TextView
                android:id="@+id/register_class_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/standard_margin_x2"
                android:textSize="@dimen/large_font_size"
                android:textColor="@android:color/black"
                android:layout_below="@+id/Register_user_last_name"
                android:text="نام دوره :"/>
            <EditText
                android:id="@+id/register_classname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/standard_margin_x2"
                android:layout_marginLeft="@dimen/standard_margin_x2"
                android:layout_marginBottom="@dimen/standard_margin_x2"
                android:enabled="false"
                android:background="@drawable/selectoredittextusername"
                android:layout_below="@id/register_class_name_txt"
                />
            <TextView
                android:id="@+id/Register_user_email_url_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/standard_margin_x2"
                android:textSize="@dimen/large_font_size"
                android:textColor="@android:color/black"
                android:layout_below="@+id/register_classname"
                android:text="نشانی ایمیل : "/>
            <EditText
                android:id="@+id/Register_user_email_url"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/standard_margin_x2"
                android:layout_marginLeft="@dimen/standard_margin_x2"
                android:layout_marginBottom="@dimen/standard_margin_x2"
                android:enabled="false"
                android:background="@drawable/selectoredittextusername"
                android:layout_below="@id/Register_user_email_url_txt"
                />
            <TextView
                android:id="@+id/Register_user_phone_number_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/standard_margin_x2"
                android:textSize="@dimen/large_font_size"
                android:textColor="@android:color/black"
                android:layout_below="@+id/Register_user_email_url"
                android:text="شماره تلفن همراه :"/>
            <EditText
                android:id="@+id/Register_user_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/standard_margin_x2"
                android:enabled="false"
                android:layout_marginLeft="@dimen/standard_margin_x2"
                android:layout_marginBottom="@dimen/standard_margin_x2"
                android:maxLines="1"
                android:maxLength="11"
                android:background="@drawable/selectoredittextusername"
                android:layout_below="@id/Register_user_phone_number_txt"
                />

            <Button
                android:id="@+id/Class_Registeration_Form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_below="@+id/Register_user_phone_number"
                android:textColor="@android:color/white"
                android:background="@drawable/selector_departemants"
                android:text="ثبت نام"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
