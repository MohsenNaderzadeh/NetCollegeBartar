<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="bluedragon.app.netcollegebartar.Views.Activities.ImageGalleryFullActivity">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/ImageGalleryFullAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ImageGallery_Tool_Bar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="8dp"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/image_gallery_full_Toolbar_TxtView_Title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/standard_margin"
                    android:textColor="@color/splash_background_1"
                    android:textSize="@dimen/toolbar_title_Font_size"
                    tools:text="عنوان خبر" />

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>
    <android.support.v7.widget.CardView
        android:id="@+id/ImageGallery_Cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        android:layout_below="@+id/ImageGalleryFullAppBarLayout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/ImageGallery_Logo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:src="@drawable/pic1"
                android:adjustViewBounds="true"
                android:layout_marginBottom="@dimen/standard_margin_x2"
                android:scaleType="centerCrop"/>
            <TextView
                android:id="@+id/ImageGallery_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/standard_margin_x2"
                android:layout_marginBottom="@dimen/standard_margin_x2"
                android:layout_gravity="right"
                android:textColor="@android:color/black"
                android:textSize="@dimen/large_font_size"
                tools:text="عنوان خبر"/>



        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
