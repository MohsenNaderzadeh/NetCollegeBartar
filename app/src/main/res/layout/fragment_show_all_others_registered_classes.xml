<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:padding="@dimen/standard_margin_x2">




    <android.support.v7.widget.RecyclerView
        android:id="@+id/ShowallUserRegisteredOthersClasses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <ProgressBar
        android:id="@+id/progressbar_registeredOthersclasses"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerInParent="true"/>
    <TextView
        android:id="@+id/show_all_registered_Others_class_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="@dimen/normal_font_size"
        android:textColor="@android:color/black"
        android:visibility="gone"
        android:text="در حال حاضر شما دوره ثبت نام شده ای ندارید ."/>

</RelativeLayout>