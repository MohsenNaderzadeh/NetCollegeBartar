<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Teacher_Card_View"
    android:orientation="vertical"
    android:layout_width="180dp"
    android:layout_height="wrap_content"
    app:cardElevation="3dp"
    app:cardCornerRadius="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/standard_margin_x2"
        android:padding="@dimen/standard_margin">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/Image_recycler_teachers"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/standard_margin"
            android:scaleType="centerCrop"
            tools:src="@drawable/ic_main" />
        <TextView
            android:id="@+id/teachers_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="right"
            tools:text="@string/dummy_name"
            android:layout_marginRight="@dimen/standard_margin"
            android:textSize="@dimen/large_font_size"/>
        <TextView
            android:id="@+id/departemans_group_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/standard_margin"
            android:layout_marginTop="@dimen/standard_margin"
            tools:text="نام دپارتمان در حال تدریس"
            android:textSize="@dimen/normal_font_size"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>